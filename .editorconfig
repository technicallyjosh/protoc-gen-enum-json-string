# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{*.go,Makefile}]
indent_style = tab
tab_width = 4

[*.{yaml,yml}]
quote_type = single
